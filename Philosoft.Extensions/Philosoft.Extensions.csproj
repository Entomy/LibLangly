		<LangVersion>9.0</LangVersion>
		<Nullable>enable</Nullable>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<Description>Provides a rich set of extension methods build upon the trait APIs.</Description>
		<PackageTags>trait, traits, trait-based</PackageTags>
		<AssemblyName>Philosoft.Extensions</AssemblyName>
		<RootNamespace>System</RootNamespace>
		<PackageIcon>Logo.png</PackageIcon>
	</PropertyGroup>

	<ItemGroup>
		<Compile Include="..\GlobalSuppressions.cs" Link="GlobalSuppressions.cs" />
		<None Include="Logo.png" Pack="true" Visible="true" PackagePath="\" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\Philosoft.Traits\Philosoft.Traits.csproj" />
	</ItemGroup>

	<Import Project="..\Pointer\Pointer.projitems" Label="Shared" />

</Project>
