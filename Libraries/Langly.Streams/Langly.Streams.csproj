<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Description>A replacement Streams API with superior usability.</Description>
		<PackageTags>langly, stream, streams</PackageTags>
		<AssemblyName>Langly.Streams</AssemblyName>
		<Configurations>Debug;Release;Debug-Windows;Release-Windows</Configurations>
	</PropertyGroup>

	<ItemGroup>
		<Compile Include="..\GlobalSuppressions.cs" Link="GlobalSuppressions.cs" />
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="PInvoke.Kernel32" Version="0.7.78" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\Langly.Buffers\Langly.Buffers.csproj" />
	  <ProjectReference Include="..\Langly.Core\Langly.Core.csproj" />
	</ItemGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release-Windows|AnyCPU' or '$(Configuration)|$(Platform)'=='Debug-Windows|AnyCPU'">
		<DefineConstants>TRACE;WINDOWS</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release-Unix|AnyCPU' or '$(Configuration)|$(Platform)'=='Debug-Unix|AnyCPU'">
		<DefineConstants>TRACE;UNIX</DefineConstants>
	</PropertyGroup>

	<Import Project="..\Langly.Checks\Langly.Checks.projitems" Label="Shared" />

</Project>
