<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net5.0</TargetFramework>
		<LangVersion>9.0</LangVersion>
		<Nullable>enable</Nullable>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<Description>Provides support for mutable patterns. This is typically not necessary, and only of relevance to compiler authors or other situations where advanced, but easy to mess up, features are needed.</Description>
		<PackageTags>string, pattern, patterns, pattern matching, parser, parsers, parser combinator, combinator</PackageTags>
		<AssemblyName>Stringier.Patterns.Mutable</AssemblyName>
		<PackageIcon>Logo.png</PackageIcon>
		<RootNamespace>Stringier</RootNamespace>
	</PropertyGroup>

	<ItemGroup>
		<Compile Include="..\GlobalSuppressions.cs" Link="GlobalSuppressions.cs" />
		<None Include="Logo.png" Pack="true" Visible="true" PackagePath="\" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\Philosoft.NullableAttributes\Philosoft.NullableAttributes.csproj" />
	  <ProjectReference Include="..\Stringier.Case\Stringier.Case.csproj" />
	  <ProjectReference Include="..\Stringier.Patterns\Stringier.Patterns.csproj" />
	  <ProjectReference Include="..\Stringier.Rune\Stringier.Rune.csproj" />
	</ItemGroup>

</Project>
