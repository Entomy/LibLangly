		<LangVersion>preview</LangVersion>
		<Nullable>enable</Nullable>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<EnablePreviewFeatures>True</EnablePreviewFeatures>
		<Description>Provides various arithmetic extensions.</Description>
		<PackageTags>number, numbers, numeric, numerics, math, maths, mathematic, mathematics, arithmetic</PackageTags>
		<AssemblyName>Numbersome.Arithmetic</AssemblyName>
		<RootNamespace>Numbersome</RootNamespace>
		<PackageIcon>Logo.png</PackageIcon>
		<CodeAnalysisRuleSet>..\Global.ruleset</CodeAnalysisRuleSet>
	</PropertyGroup>

	<ItemGroup>
		<None Include="Logo.png" Pack="true" Visible="true" PackagePath="\" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="System.Runtime.Experimental" Version="6.0.0-preview.7.21377.19" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Philosoft.Concepts\Philosoft.Concepts.csproj" />
	</ItemGroup>

