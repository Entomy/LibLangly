<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard1.3</TargetFramework>
		<LangVersion>9.0</LangVersion>
		<Nullable>enable</Nullable>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<Description>Provides a rich type system for working with Unicode Categories.</Description>
		<PackageTags>category, categories, unicode</PackageTags>
		<AssemblyName>Stringier.Categories</AssemblyName>
		<PackageIcon>Logo.png</PackageIcon>
	</PropertyGroup>

	<ItemGroup>
		<Compile Include="..\GlobalSuppressions.cs" Link="GlobalSuppressions.cs" />
		<None Include="Logo.png" Pack="true" Visible="true" PackagePath="\" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="UnicodeInformation" Version="2.5.0" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Numbersome.Sets\Numbersome.Sets.csproj" />
		<ProjectReference Include="..\Stringier.Rune\Stringier.Rune.csproj" />
	</ItemGroup>

</Project>
